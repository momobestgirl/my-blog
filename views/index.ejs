<%- include("partials/header.ejs") %>
<div class="main-title">
    <h2> Welcome to My Blog!</h2>
</div>
<div class="container">
        <% posts.forEach((post,index) => {%>
            <div class="post-card">
                <div class="post-title">
                    <h3><%= post.title %></h3>
                </div>
                <div class="post-content">
                    <% if (post.content.length > 99) { %>
                        <p><%= post.content.substring(0,50) %>..</p>
                    <% } else { %>
                        <p><%= post.content %></p>
                    <% } %>
                    <div class="button">
                        <a href="/post/<%=index %>">See More</a>
                        <a href="/edit/<%=index %>">Edit Post</a>
                        <form action="/delete/<%= index %>?_method=DELETE" method="POST">
                            <button type="submit" class="btnDelete">Delete</button>
                        </form>
                    </div>
                    <div class="date">
                        <h4 class="dateText"><%= post.date %></h4>
                    </div>
                </div>
            </div>
        <% }) %> 
</div>

<%- include("partials/footer.ejs") %>
